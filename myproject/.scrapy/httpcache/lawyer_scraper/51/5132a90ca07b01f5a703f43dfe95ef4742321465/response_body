const modalClose = document.querySelectorAll('[cvmodal-close]');

function handleScrollBlock(event) {
	document.body.classList.add('no-scroll');
}

function handleScrollUnblock(event) {
  document.body.classList.remove('no-scroll');
}

modalOpen.forEach(modalBlock => {
  modalBlock.addEventListener('click', handleScrollBlock);
});

modalClose.forEach(modalBlock => {
	 modalBlock.addEventListener('click', handleScrollUnblock);
});
</script>

<!-- Start mobile Testimonials expand/collape -->
<script>
document.addEventListener('DOMContentLoaded', function() {
const buttons = document.querySelectorAll('.is-testimonial .button-expand');
buttons.forEach(function(button) {
  
  button.setAttribute('data-clickable', 'true');
  
    button.addEventListener('click', function(event) {
      	event.stopPropagation();
      	
       		// Check if the button is "disabled"
            if (this.getAttribute('data-clickable') === 'false') {
                return; // Exit if the button is "disabled"
            }

            // Set the button as "disabled"
            this.setAttribute('data-clickable', 'false');

        let parentWrapper = this.closest('.how_item_content-wrapper');
        let textWrapper = parentWrapper.querySelector('.how_item-text');
        let swiperContainer = this.closest('.swiper-testimonials').querySelector('.swiper');
        let swiperInstance = swiperContainer.swiper;
      	swiperInstance.allowTouchMove = false;

        // Toggle class on the button and icon
        this.classList.toggle('is-unfolded');
        let icon = this.querySelector('.icon_how_button'); // Adjust if needed

        // Find the div inside the button for the text
        let buttonText = this.querySelector('div'); // Assuming 'div' is the direct child. Adjust if needed.

        let newHeight;
        if (textWrapper.classList.contains('is-unfolded')) {
            newHeight = '192px'; // Default collapsed height
            textWrapper.classList.remove('is-unfolded');
            buttonText.textContent = 'Read more'; // Change text when collapsing
            if (icon) icon.style.transform = ''; // Reset rotation when collapsing
        } else if (textWrapper.scrollHeight > 192) {
            newHeight = textWrapper.scrollHeight + 'px';
            textWrapper.classList.add('is-unfolded');
            buttonText.textContent = 'Read less'; // Change text when expanding
            if (icon) icon.style.transform = 'rotateZ(-90deg)'; // Rotate icon when expanding
        }

        // Smooth transition for slide height
        if (newHeight) {
            textWrapper.style.height = newHeight;

            // Delay Swiper update until after the transition completes
            setTimeout(() => {
                if (swiperInstance) {
                    swiperInstance.updateAutoHeight(150);
                }
            }, 150);
        }
      
      setTimeout(() => {
                swiperInstance.allowTouchMove = true;
        		this.setAttribute('data-clickable', 'true');
            }, 500); // Re-enable after a short delay
                            
    });
});
  // Get rid of fade out when "show more" button is off
  $(".w-condition-invisible").each(function(){
    
  	$(this).closest('.how_item_content-wrapper').find('.how_item-text').addClass('always-unfolded');
  
  });
                                   
                                   
  
});

$(".swiper-testimonials").each(function (index) {
const swiperElement = $(this).find(".swiper")[0];

// Wait for the Swiper instance to be initialized
setTimeout(() => {
    let swiperInstance = swiperElement.swiper;

    if (swiperInstance) {
        // Add event listener for slide change
        swiperInstance.on('slideChange', function () {
            // Find all .how_item-text elements and reset their height
            const textWrappers = swiperInstance.el.querySelectorAll('.how_item-text');
            const buttons = swiperInstance.el.querySelectorAll('.button-expand');

            textWrappers.forEach(function(textWrapper) {
                textWrapper.style.height = ''; // Resets to default height
                textWrapper.classList.remove('is-unfolded');
            });

            buttons.forEach(function(button) {
                let buttonText = button.querySelector('div'); // Adjust selector as needed
                let icon = button.querySelector('.icon_how_button'); // Adjust selector as needed

                button.classList.remove('is-unfolded');
                if (buttonText) buttonText.textContent = 'Show more'; // Reset button text
                if (icon) icon.style.transform = ''; // Reset icon rotation
            });
        });
    }
}, 0);
});
</script>
<!-- end mobile Testimonials expand/collape --></body></html>